# Server Configuration
PORT=5050
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# Database Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority&appName=cluster

# AI Services - LLM Provider Configuration
LLM_PROVIDER=gemini
LLM_FALLBACK_PROVIDERS=openai,anthropic,local
LLM_CACHE_ENABLED=true
LLM_CACHE_TTL=3600
LLM_CACHE_MAX_SIZE=100

# Provider API Keys
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_DEFAULT_MODEL=gemini-2.5-flash
GEMINI_TIMEOUT=60000

OPENAI_API_KEY=your_openai_api_key_here
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_DEFAULT_MODEL=gpt-4o-mini
OPENAI_TIMEOUT=60000

ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_BASE_URL=https://api.anthropic.com/v1
ANTHROPIC_DEFAULT_MODEL=claude-3-5-sonnet-20241022
ANTHROPIC_TIMEOUT=60000

HUGGINGFACE_API_KEY=your_huggingface_api_key_here
HUGGINGFACE_BASE_URL=https://api-inference.huggingface.co
HUGGINGFACE_DEFAULT_MODEL=meta-llama/Llama-3-8b-chat-hf
HUGGINGFACE_TIMEOUT=120000

# Local Model Configuration
LOCAL_LLM_ENABLED=false
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_DEFAULT_MODEL=llama3:8b
OLLAMA_TIMEOUT=120000

VLLM_BASE_URL=http://localhost:8000
VLLM_TIMEOUT=120000

# Cost Tracking
LLM_COST_TRACKING_ENABLED=true
LLM_COST_ALERT_THRESHOLD=1000
LLM_RATE_LIMIT_PER_USER=100

# Fine-Tuning Configuration
TRAINING_DATA_PATH=./training_data
MODEL_STORAGE_PATH=./models
TRAINING_GPU_ENABLED=false
TRAINING_BASE_MODEL=meta-llama/Llama-3-8b-Instruct

# Redis Configuration (for caching)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Authentication
JWT_SECRET=your_jwt_secret_here
CLERK_SECRET_KEY=your_clerk_secret_key_here

# File Upload & Storage
MAX_FILE_SIZE=52428800
UPLOAD_DIR=uploads
FILE_STORAGE_TYPE=local

# AWS S3 Configuration (for production)
AWS_S3_BUCKET=q-sci-uploads
AWS_S3_ANALYSIS_BUCKET=q-sci-analysis-results
AWS_S3_TEMP_BUCKET=q-sci-temp-files
AWS_S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here

# Google Cloud Storage Configuration (alternative)
GCS_BUCKET=your-gcs-bucket
GCS_PROJECT_ID=your-project-id
GCS_KEY_FILENAME=path/to/service-account.json

# Azure Blob Storage Configuration (alternative)
AZURE_STORAGE_ACCOUNT=your-storage-account
AZURE_STORAGE_KEY=your-storage-key
AZURE_CONTAINER_NAME=your-container

# Logging
LOG_LEVEL=debug
LOG_FILE=logs/app.log

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=http://localhost:5173

# Security
HELMET_CSP_ENABLED=true
HELMET_HSTS_ENABLED=true
INTERNAL_API_KEY=your_internal_api_key_here

# Algorithm Management System
MAX_CONCURRENT_ALGORITHMS=100
MAX_CONCURRENT_PIPELINES=50
ALGORITHM_METRICS_RETENTION_DAYS=30
ALGORITHM_MONITORING_INTERVAL=10000
ALGORITHM_ANALYTICS_INTERVAL=600000

# Performance Monitoring
PERFORMANCE_ALERT_THRESHOLDS=true
PERFORMANCE_BASELINE_DAYS=7
PERFORMANCE_ANOMALY_DETECTION=true

# A/B Testing
AB_TEST_MINIMUM_SAMPLE_SIZE=1000
AB_TEST_MAXIMUM_DURATION=168
AB_TEST_STATISTICAL_SIGNIFICANCE=0.95

# Analytics
ANALYTICS_DASHBOARD_REFRESH=30
ANALYTICS_REPORT_GENERATION=true
ANALYTICS_INSIGHT_GENERATION=true
